---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BlogCard from '../components/BlogCard.astro';
import Newsletter from '../components/Newsletter.astro';
import AmazonButton from '../components/AmazonButton.astro';
import DynamicIcon from '../components/DynamicIcon.astro';
import { getEntry } from 'astro:content';

// Get homepage content from CMS
const homepageData = await getEntry('homepage', 'main');
const { hero, featuredProduct, categories, whyChooseUs, stats } = homepageData.data;
// Sample featured posts data (in a real app, this would come from a CMS or markdown files)
const featuredPosts = [
  {
    title: "Top 10 Smart Home Devices for 2024",
    description: "Discover the latest smart home innovations that will transform your living space. From voice assistants to automated lighting systems.",
    image: "https://images.pexels.com/photos/4112236/pexels-photo-4112236.jpeg?auto=compress&cs=tinysrgb&w=800",
    url: "/blog/sample-post",
    category: "Smart Home",
    date: "2024-01-15",
    readingTime: 8,
    featured: true
  },
  {
    title: "Best Budget Laptops Under $500",
    description: "Find the perfect affordable laptop without compromising on performance. Our comprehensive review of budget-friendly options.",
    image: "https://images.pexels.com/photos/812264/pexels-photo-812264.jpeg?auto=compress&cs=tinysrgb&w=800",
    url: "/coming-soon?category=Electronics&title=Best Budget Laptops Under $500",
    category: "Electronics",
    date: "2024-01-12",
    readingTime: 6
  },
  {
    title: "Kitchen Gadgets That Actually Work",
    description: "Cut through the marketing hype and discover kitchen tools that genuinely make cooking easier and more enjoyable.",
    image: "https://images.pexels.com/photos/1638280/pexels-photo-1638280.jpeg?auto=compress&cs=tinysrgb&w=800",
    url: "/coming-soon?category=Kitchen&title=Kitchen Gadgets That Actually Work",
    category: "Kitchen",
    date: "2024-01-10",
    readingTime: 5
  },
  {
    title: "Fitness Tracker Comparison 2024",
    description: "Compare the latest fitness trackers from Apple, Fitbit, and Samsung. Find the perfect device for your health goals.",
    image: "https://images.pexels.com/photos/4056723/pexels-photo-4056723.jpeg?auto=compress&cs=tinysrgb&w=800",
    url: "/coming-soon?category=Health & Fitness&title=Fitness Tracker Comparison 2024",
    category: "Health & Fitness",
    date: "2024-01-08",
    readingTime: 7
  }
];
---

<BaseLayout 
  title="Blicksel Picks - Your Trusted Amazon Product Review Source"
  description="Discover the best Amazon products with honest reviews, detailed comparisons, and expert recommendations. Make informed purchasing decisions with Blicksel Picks."
>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-blue-50 via-indigo-50 to-orange-50 py-20 md:py-32 overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-10 left-10 w-96 h-96 bg-gradient-to-r from-primary-400 to-primary-600 rounded-full mix-blend-multiply filter blur-2xl animate-pulse"></div>
        <div class="absolute top-40 right-10 w-80 h-80 bg-gradient-to-r from-accent-400 to-accent-600 rounded-full mix-blend-multiply filter blur-2xl animate-pulse" style="animation-delay: 2s;"></div>
        <div class="absolute -bottom-8 left-20 w-72 h-72 bg-gradient-to-r from-purple-400 to-purple-600 rounded-full mix-blend-multiply filter blur-2xl animate-pulse" style="animation-delay: 4s;"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-gradient-to-r from-blue-400 to-indigo-500 rounded-full mix-blend-multiply filter blur-2xl animate-pulse" style="animation-delay: 6s;"></div>
      </div>
      
      <!-- Geometric Shapes -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none opacity-30">
        <div class="absolute top-1/4 left-1/4 w-3 h-3 bg-primary-500 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
        <div class="absolute top-1/3 right-1/3 w-2 h-2 bg-accent-500 rounded-full animate-pulse" style="animation-delay: 3s;"></div>
        <div class="absolute bottom-1/4 left-1/3 w-4 h-4 bg-blue-500 rounded-full animate-pulse" style="animation-delay: 5s;"></div>
        <div class="absolute top-1/2 right-1/4 w-2.5 h-2.5 bg-purple-500 rounded-full animate-pulse" style="animation-delay: 7s;"></div>
        <div class="absolute top-3/4 left-1/2 w-1.5 h-1.5 bg-indigo-500 rounded-full animate-pulse" style="animation-delay: 2s;"></div>
        <div class="absolute top-1/6 right-1/2 w-3.5 h-3.5 bg-pink-400 rounded-full animate-pulse" style="animation-delay: 4s;"></div>
        <div class="absolute bottom-1/3 right-1/6 w-2 h-2 bg-cyan-500 rounded-full animate-pulse" style="animation-delay: 6s;"></div>
      </div>
      
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="relative text-center mb-20 z-10">
          <h1 class="text-5xl md:text-7xl font-bold text-gray-900 mb-8 leading-tight" set:html={hero.title}></h1>
          <p class="text-xl md:text-2xl text-gray-600 mb-10 max-w-4xl mx-auto leading-relaxed">
            {hero.subtitle}
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
            <a href={hero.primaryCta.url} class="btn-primary text-lg px-8 py-4 rounded-xl font-semibold transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-2xl hover:-translate-y-1">
              {hero.primaryCta.text}
            </a>
            <a href={hero.secondaryCta.url} class="btn-accent text-lg px-8 py-4 rounded-xl font-semibold transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-2xl hover:-translate-y-1">
              {hero.secondaryCta.text}
            </a>
          </div>
          
          <!-- Trust Indicators -->
          <div class="flex flex-wrap justify-center items-center gap-6 md:gap-8 text-sm text-gray-600 mb-12">
            <div class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-2 drop-shadow-sm" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="font-medium">Honest Reviews</span>
            </div>
            <div class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-2 drop-shadow-sm" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="font-medium">Real Testing</span>
            </div>
            <div class="flex items-center">
              <svg class="w-5 h-5 text-green-500 mr-2 drop-shadow-sm" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="font-medium">Expert Recommendations</span>
            </div>
          </div>
        </div>
        
        <!-- Stats -->
        <div class="relative grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8 text-center z-10">
          {stats.map(stat => (
            <div class="group bg-white/60 backdrop-blur-md rounded-2xl p-6 md:p-8 border border-white/30 shadow-lg hover:shadow-2xl transition-all duration-200 hover:scale-105 hover:-translate-y-2 hover:bg-white/70">
              <div class="flex justify-center mb-3">
                <div class="p-2 bg-primary-100/80 rounded-xl group-hover:bg-primary-200/80 transition-colors duration-200">
                  <DynamicIcon name={stat.icon} class="w-6 h-6 md:w-8 md:h-8 text-primary-600 group-hover:text-primary-700 transition-colors duration-200" />
                </div>
              </div>
              <div class="text-2xl md:text-3xl lg:text-4xl font-bold text-primary-600 mb-2 group-hover:text-primary-700 transition-colors duration-200">{stat.number}</div>
              <div class="text-gray-700 font-medium text-xs md:text-sm group-hover:text-gray-800 transition-colors duration-200">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Featured Product Banner -->
    <section class="bg-gradient-to-r from-accent-600 to-primary-600 text-white py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row items-center justify-between">
          <div class="mb-6 md:mb-0">
            <div class="flex items-center mb-4">
              <span class="bg-white bg-opacity-20 text-white px-3 py-1 rounded-full text-sm font-semibold mr-3 flex items-center gap-2">
                <DynamicIcon name={featuredProduct.badgeIcon} class="w-4 h-4" />
                {featuredProduct.badge}
              </span>
            </div>
            <h2 class="text-3xl md:text-4xl font-bold mb-3">{featuredProduct.title}</h2>
            <p class="text-xl text-accent-100 mb-2">{featuredProduct.subtitle}</p>
            <p class="text-accent-100">{featuredProduct.description}</p>
          </div>
          <div class="text-center">
            <AmazonButton 
              productUrl={featuredProduct.ctaUrl}
              productName={featuredProduct.ctaText}
              price={featuredProduct.price}
              className="transform hover:scale-105 shadow-lg"
            />
          </div>
        </div>
      </div>
    </section>
    
    <!-- Categories Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">Shop by Category</h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">Browse our most popular product categories and discover the best deals</p>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
          {categories.map(category => (
            <a 
              href={`/categories/${category.name.toLowerCase().replace(/\s+/g, '-').replace(/&/g, '').replace(/\s/g, '')}`}
              class="card text-center p-8 hover:scale-105 hover:shadow-xl transform transition-all duration-300"
            >
              <div class="flex justify-center mb-4">
                <DynamicIcon name={category.icon} class="w-12 h-12 text-gray-600" />
              </div>
              <h3 class="font-bold text-gray-900 mb-3 text-lg">{category.name}</h3>
              <p class="text-gray-600 text-sm mb-4">{category.description}</p>
              <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${category.colorClass}`}>
                {category.count} products
              </span>
            </a>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Featured Posts -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">Latest Reviews & Guides</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
          {featuredPosts.map(post => (
            <BlogCard {...post} />
          ))}
        </div>
        
        <div class="text-center">
          <a href="/blog" class="btn-primary text-lg px-8 py-4 rounded-xl font-semibold">
            View All Posts
          </a>
        </div>
      </div>
    </section>
    
    <!-- Why Choose Us -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">Why Choose Blicksel Picks?</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">We're committed to helping you make the best purchasing decisions with honest, detailed reviews</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
          {whyChooseUs.map(item => (
            <div class="text-center">
              <div class={`w-20 h-20 ${item.colorClass} rounded-2xl flex items-center justify-center mx-auto mb-6`}>
                <DynamicIcon name={item.icon} class="w-10 h-10 text-primary-600" />
              </div>
              <h3 class="text-2xl font-bold text-gray-900 mb-4">{item.title}</h3>
              <p class="text-gray-600 text-lg leading-relaxed">{item.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Newsletter -->
    <Newsletter />
    
    <!-- AdSense Placeholder -->
    <div class="py-8 bg-gray-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-gray-200 border-2 border-dashed border-gray-300 rounded-lg p-8 text-center">
          <p class="text-gray-500">Google AdSense Advertisement Placeholder</p>
          <p class="text-sm text-gray-400 mt-2">728x90 Leaderboard</p>
        </div>
      </div>
    </div>
  </main>
  
  <Footer />
</BaseLayout>