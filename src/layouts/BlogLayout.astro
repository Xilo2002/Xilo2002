---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import InlineAmazonButton from '../components/InlineAmazonButton.astro';

export interface Props {
  frontmatter: {
    title: string;
    description: string;
    image?: string;
    category: string;
    tags: string[];
    author: string;
    publishDate: string;
    readingTime: number;
    amazon_button_url?: string;
    amazon_button_text?: string;
  };
}

const { frontmatter } = Astro.props;
const { title, description, image, category, tags, author, publishDate, readingTime, amazon_button_url, amazon_button_text } = frontmatter;

const formattedDate = new Date(publishDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const schemaMarkup = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": description,
  "image": image ? new URL(image, Astro.site).toString() : undefined,
  "author": {
    "@type": "Person",
    "name": author
  },
  "publisher": {
    "@type": "Organization",
    "name": "Blicksel Picks",
    "logo": {
      "@type": "ImageObject",
      "url": new URL("/images/logo.png", Astro.site).toString()
    }
  },
  "datePublished": publishDate,
  "dateModified": publishDate,
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": new URL(Astro.url.pathname, Astro.site).toString()
  }
};
---

<BaseLayout title={title} description={description} image={image}>
  <Header />
  
  <main class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <div class="bg-white shadow-sm">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <nav class="flex items-center space-x-2 text-sm text-gray-500 mb-6">
          <a href="/" class="hover:text-primary-600">Home</a>
          <span>/</span>
          <a href="/blog" class="hover:text-primary-600">Blog</a>
          <span>/</span>
          <a href={`/categories/${category.toLowerCase().replace(/\s+/g, '-').replace(/&/g, '').replace(/\s/g, '')}`} class="hover:text-primary-600">{category}</a>
          <span>/</span>
          <span class="text-gray-900">{title}</span>
        </nav>
        
        <div class="mb-6">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary-100 text-primary-800">
            {category}
          </span>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight">
          {title}
        </h1>
        
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          {description}
        </p>
        
        <div class="flex items-center justify-between flex-wrap gap-4">
          <div class="flex items-center space-x-4 text-sm text-gray-500">
            <div class="flex items-center">
              <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-accent-500 rounded-full flex items-center justify-center mr-3">
                <span class="text-white font-semibold text-sm">{author.charAt(0)}</span>
              </div>
              <div>
                <div class="font-medium text-gray-900">{author}</div>
                <div class="text-gray-500">Author</div>
              </div>
            </div>
            <span>•</span>
            <time datetime={publishDate}>{formattedDate}</time>
            <span>•</span>
            <span>{readingTime} min read</span>
          </div>
          
          <div class="flex items-center space-x-2">
            {tags.map(tag => (
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                #{tag}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
    
    <!-- Featured Image -->
    {image && (
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <img 
          src={image} 
          alt={title}
          class="w-full h-64 md:h-96 object-cover rounded-lg shadow-lg"
          loading="eager"
        >
      </div>
    )}
    
    <!-- Content -->
    <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="bg-white rounded-lg shadow-sm p-8 md:p-12">
        <div class="prose prose-lg max-w-none">
          <slot />
        </div>
        
        {amazon_button_url && (
          <div class="mt-12 pt-8 border-t border-gray-200">
            <AmazonCTAButton 
              url={amazon_button_url}
              text={amazon_button_text || "Buy on Amazon"}
            />
          </div>
        )}
      </div>
    </article>
    
    <!-- Share & Newsletter -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
      <div class="bg-white rounded-lg shadow-sm p-8 mb-8">
        <h3 class="text-xl font-bold text-gray-900 mb-4">Share this article</h3>
        <div class="flex space-x-4">
          <a 
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url.toString())}`}
            target="_blank"
            rel="noopener"
            class="flex items-center space-x-2 bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"></path>
            </svg>
            <span>Tweet</span>
          </a>
          
          <a 
            href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.toString())}`}
            target="_blank"
            rel="noopener"
            class="flex items-center space-x-2 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M20 10c0-5.523-4.477-10-10-10S0 4.477 0 10c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V10h2.54V7.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V10h2.773l-.443 2.89h-2.33v6.988C16.343 19.128 20 14.991 20 10z" clip-rule="evenodd"></path>
            </svg>
            <span>Share</span>
          </a>
        </div>
      </div>
    </div>
  </main>
  
  <Footer />
  
  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json" set:html={JSON.stringify(schemaMarkup)}></script>
</BaseLayout>